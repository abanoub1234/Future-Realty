<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundd"
    tools:context=".ProfileScreen">

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="#e8e8e8"
        android:foregroundGravity="center"
        android:drawableBottom="@drawable/logout">

    </Button>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_centerInParent="true"
        android:gravity="center">
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_40sdp"
                app:cardElevation="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRAdius="5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/ProfileNameTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:gravity="center"
                        android:text="Abanoub Emad"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20ssp"
                        android:textStyle="bold" />

                    <View
                        android:background="#79D6D1D1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        <ImageView
            android:id="@+id/ProfileImageView"
            android:src="@drawable/user"
            app:shapeAppearanceOverlay="@style/Circular"
            android:elevation="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="@dimen/_98sdp"/>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRAdius="@dimen/_5sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_phone"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>
                <TextView
                    android:text="Mobile"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <TextView
                android:id="@+id/phoneTxt"
                android:text="+201274454814"
                android:textStyle="bold"
                android:textColor="#605E5E"
                android:textSize="@dimen/_18ssp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRAdius="@dimen/_5sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_email"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>
                <TextView
                    android:text="Email"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <TextView
                android:id="@+id/ProfileEmailTxtView"
                android:text="abanobemad45@gmail.com"
                android:textStyle="bold"
                android:textColor="#ED5E5E5E"
                android:textSize="@dimen/_18ssp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>




