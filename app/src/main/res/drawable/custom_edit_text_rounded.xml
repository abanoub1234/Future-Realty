<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--The outline turns to colorPrimary when the EditText is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#54ac41" />
        </shape>
    </item>


    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#8b8c89" />
        </shape>
    </item>
    <TextView android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="E0E0E0" />

</selector>
